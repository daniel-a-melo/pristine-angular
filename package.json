{
  "name": "pristine-angular",
  "version": "1.0.0",
  "description": "Angular pristine application",
  "private": true,
  "main": "src/main.ts",
  "repository": {},
  "author": "Daniel Melo",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "ngc": "ngc",
    "clean-src": "rimraf ./src/**/*.js && rimraf ./src/**/*.map && rimraf ./src/**/*metadata.json",
    "clean": "rimraf dist && rimraf aot && yarn run clean-src",
    "aot-compile": "yarn run clean && ngc -p tsconfig-aot.json",
    "start": "webpack-dev-server -w --inline --progress --port 8080 --debug",
    "test": "karma start",
    "build": "yarn run clean && webpack --config config/webpack.prod.js --display-chunks --display-modules --progress",
    "build:profile": "rimraf dist && webpack --config config/webpack.prod.js --profile --json > app-bundle-stats.json",
    "build:vendor": "rimraf lib && webpack --config config/webpack.vendor.js --display-chunks --display-modules --progress",
    "build:vendor:profile": "rimraf lib && webpack --config config/webpack.vendor.js --profile --json > vendor-bundle-stats.json && webpack --config config/webpack.polyfills.js --profile --json > polyfills-bundle-stats.json",
    "build:vendor:prod": "rimraf lib && webpack --config config/webpack.vendor.prod.js --display-chunks --display-modules --progress",
    "webpack-bundle-analyzer": "webpack-bundle-analyzer",
    "lint": "tslint src/**/*.ts{,x}"
  },
  "dependencies": {
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "bulma": "^0.6.0",
    "core-js": "^2.5.1",
    "rxjs": "5.5.2",
    "zone.js": "0.8.18",
    "jasmine-core": "^2.8.0"    
  },
  "devDependencies": {
    "@types/jasmine": "^2.6.2",
    "@angular/compiler-cli": "^5.0.0",
    "@ngtools/webpack": "^1.8.0",
    "@types/core-js": "^0.9.43",
    "@types/node": "^8.0.31",
    "add-asset-html-webpack-plugin": "^2.1.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.3.0",
    "codelyzer": "^4.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "expose-loader": "^0.7.3",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "karma": "^1.7.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.4",
    "node-sass": "^4.5.3",
    "null-loader": "^0.1.1",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "phantomjs-polyfill-includes": "^1.0.2",
    "phantomjs-prebuilt": "^2.1.15",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "tslint": "5.8.0",
    "tslint-eslint-rules": "4.1.1",
    "tslint-loader": "3.5.3",
    "typescript": "^2.5.3",
    "webpack": "^3.7.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.0"
  }
}
