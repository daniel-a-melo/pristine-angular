{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "runtimeExecutable": "chromium-browser",
            "request": "launch",
            "name": "Launch Chromium against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        }
    ]
}